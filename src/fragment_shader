#version 330 core

out vec4 FragColor;

in vec4 frag_shader_color;
in vec2 frag_shader_tex_coord;

uniform sampler2D texture1;
uniform sampler2D texture2;
uniform float blend;

uniform bool use_texture;

void main() {
    if (use_texture)
        FragColor = mix(texture(texture1, frag_shader_tex_coord), texture(texture2, frag_shader_tex_coord), blend) * frag_shader_color;
    else 
        FragColor = frag_shader_color;
}